<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_bitcoin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/bitcoin"
        app:layout_constraintBottom_toTopOf="@+id/imageView_ethereum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bitcoin" />

    <ImageView
        android:id="@+id/imageView_ethereum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/ethereum"
        app:layout_constraintBottom_toTopOf="@+id/imageView_monero"
        app:layout_constraintStart_toStartOf="@+id/imageView_bitcoin"
        app:layout_constraintTop_toBottomOf="@+id/imageView_bitcoin"
        app:layout_constraintVertical_bias="0.65999997"
        app:srcCompat="@drawable/ethereum" />

    <ImageView
        android:id="@+id/imageView_monero"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/monero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView_ethereum"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ethereum"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/monero" />

</androidx.constraintlayout.widget.ConstraintLayout>